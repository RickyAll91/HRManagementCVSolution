@page "/hardskills"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using HRManagement.Shared.Models
@attribute [Authorize]
@inject HttpClient Http

<PageTitle>Hard Skills</PageTitle>

<h1>Hard Skills</h1>

<div class="row">
    <div class="col-md-6">
        <a class="btn btn-primary" href="/hardskills/aggiungi"><i class="oi oi-pencil"></i>Inserisci</a>
        <div class="input-group col">
            <input type="text" class="form-control" placeholder="Trova elemento per ID"
                   @bind="idRicerca" @bind:event="oninput" @onkeyup="OnInitializedAsync" />
            @if (idRicerca != null)
            {
                <div class="input-group-append">
                    <button class="btn btn-danger" @onclick="ResetSearch">
                        <i class="oi oi-x"></i>
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@if (hardskills == null)
{
    <p><em>Caricamento...</em></p>
}
else
{
    if (hardskills.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Skill</th>
                    <th>Attiva</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var skill in hardskills)
                {
                    <tr>
                        <td>@skill.Descrizione</td>
                        @if (skill.Attivo)
                        {
                            <td>Sì</td>
                        }
                        else
                        {
                            <td>No</td>
                        }
                        <td>
                            <a class="btn btn-info" href="/hardskill/modifica/@skill.HardSkillID">
                                <i class="oi oi-pencil"></i> Modifica
                            </a>
                            <a class="btn btn-danger" href="deletehardskill/@skill.HardSkillID">
                                <i class="oi oi-trash"></i> Elimina
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="row">
            <div class="col">
                <AlertComponent IsDismissable="true"
                                Icon="bi-exclamation-trianglefill"
                                ColorTheme="warning"
                                Title="Attenzione"
                                Message="Nessun elemento per l'ID indicato." />
            </div>
        </div>
    }
}


@code {

    private List<HardSkill>? hardskills;
    private int? idRicerca;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            hardskills = await Http.GetFromJsonAsync<List<HardSkill>>($"api/HardSkills/{idRicerca}");
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
        catch (HttpRequestException)
        {
            hardskills = new List<HardSkill>();
        }
    }
    public async Task ResetSearch()
    {
        idRicerca = null;
        await OnInitializedAsync();
    }
}
